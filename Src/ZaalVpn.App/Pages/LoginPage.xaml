<Page
    x:Class="ZaalVpn.App.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:customConrols="clr-namespace:ZaalVpn.App.CustomControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ZaalVpn.App.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Border Background="{StaticResource white}" CornerRadius="20">
        <Grid HorizontalAlignment="Center">

            <Grid.RowDefinitions>
                <RowDefinition Height="94*" />
                <RowDefinition Height="130*" />
                <RowDefinition Height="130*" />
            </Grid.RowDefinitions>

            <Grid VerticalAlignment="Center">
                <!--<TextBlock
             HorizontalAlignment="Left"
             VerticalAlignment="Top"
             FontFamily="{StaticResource MainFont}"
             FontSize="25"
             FontWeight="Bold"
             Text="Welcome to VPNTree!" />
         <TextBlock
             Margin="0,20"
             HorizontalAlignment="Left"
             VerticalAlignment="Top"
             FontFamily="{StaticResource MainFont}"
             FontSize="19"
             Text="Sign in to continue" />-->
                <Ellipse
                    Width="100"
                    Height="100"
                    Margin="123,81,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Fill="#9F4BFB">
                    <Ellipse.Effect>
                        <BlurEffect Radius="150" RenderingBias="Performance" />
                    </Ellipse.Effect>
                </Ellipse>

                <Image
                    Height="250"
                    VerticalAlignment="Top"
                    Source="../Resources/zaalVpn.png"
                    Stretch="Uniform" />
            </Grid>

            <StackPanel
                Grid.Row="1"
                Width="290"
                HorizontalAlignment="Center">

                <StackPanel>
                    <TextBlock
                        Margin="0,20,0,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontFamily="{StaticResource MainFont}"
                        FontSize="14"
                        FontWeight="Regular"
                        Text="User Name" />
                    <customConrols:ccTextBox
                        x:Name="txtUserName"
                        HorizontalAlignment="Left"
                        Placeholder="******" />
                </StackPanel>

                <StackPanel>
                    <TextBlock
                        Margin="0,20,0,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontFamily="{StaticResource MainFont}"
                        FontSize="14"
                        FontWeight="Regular"
                        Text="Password" />
                    <customConrols:ccTextBox
                        x:Name="txtPassword"
                        HorizontalAlignment="Left"
                        Placeholder="******" />
                    <TextBlock
                        Margin="0,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontFamily="{StaticResource MainFont}"
                        FontSize="12"
                        FontWeight="Regular">

                        <LineBreak />

                        <Hyperlink
                            FontWeight="Regular"
                            NavigateUri="https://t.me/CodeException"
                            RequestNavigate="Hyperlink_OnRequestNavigate">
                            Telegram Channel
                        </Hyperlink>
                    </TextBlock>

                </StackPanel>

            </StackPanel>
            <StackPanel Grid.Row="2">

                <Button
                    x:Name="btnLogin"
                    VerticalAlignment="Top"
                    Click="BtnLogin_OnClick"
                    Content="Sign in" />


                <Button
                    x:Name="btnsign"
                    Width="120"
                    VerticalAlignment="Top"
                    Background="{StaticResource ln2}"
                    Click="BtnSignup_OnClick"
                    Content="Sign Up" />

            </StackPanel>

            <ScrollViewer
                x:Name="svSliderImage"
                Grid.Row="2"
                Width="340"
                Height="100"
                Margin="0,70,0,0"
                VerticalAlignment="Center"
                HorizontalScrollBarVisibility="Hidden"
                PreviewMouseLeftButtonDown="svSliderImage_PreviewMouseLeftButtonDown"
                PreviewMouseLeftButtonUp="svSliderImage_PreviewMouseLeftButtonUp"
                PreviewMouseMove="svSliderImage_PreviewMouseMove"
                VerticalScrollBarVisibility="Disabled">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <StackPanel.Resources>
                        <Style TargetType="Image">
                            <Setter Property="Stretch" Value="UniformToFill" />
                            <Setter Property="Height" Value="100" />
                            <Setter Property="Margin" Value="10,0" />
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </StackPanel.Resources>

                    <Image Source="../Resources/ConnectTo/youtube.png" />
                    <Image Source="../Resources/ConnectTo/Instagram.png" />

                    <Image Source="../Resources/ConnectTo/tiktok.png" />
                    <Image Source="../Resources/ConnectTo/icons8_OnlyFans_240px.png" />
                    <Image Source="../Resources/ConnectTo/icons8_steam_240px.png" />
                    <Image Source="../Resources/ConnectTo/reddit.png" />
                    <Image Source="../Resources/ConnectTo/netflix.png" />
                    <Image Source="../Resources/ConnectTo/1298766_spotify_music_sound_icon.png" />
                    <Image Source="../Resources/ConnectTo/icons8_telegram_app_240px.png" />


                    <Image Source="../Resources/ConnectTo/youtube.png" />
                    <Image Source="../Resources/ConnectTo/Instagram.png" />
                    <Image Source="../Resources/ConnectTo/tiktok.png" />
                    <Image Source="../Resources/ConnectTo/icons8_OnlyFans_240px.png" />
                    <Image Source="../Resources/ConnectTo/icons8_steam_240px.png" />
                    <Image Source="../Resources/ConnectTo/reddit.png" />
                    <Image Source="../Resources/ConnectTo/netflix.png" />
                    <Image Source="../Resources/ConnectTo/1298766_spotify_music_sound_icon.png" />
                    <Image Source="../Resources/ConnectTo/icons8_telegram_app_240px.png" />


                    <Image Source="../Resources/ConnectTo/youtube.png" />
                    <Image Source="../Resources/ConnectTo/Instagram.png" />
                    <Image Source="../Resources/ConnectTo/tiktok.png" />
                    <Image Source="../Resources/ConnectTo/icons8_OnlyFans_240px.png" />
                    <Image Source="../Resources/ConnectTo/icons8_steam_240px.png" />
                    <Image Source="../Resources/ConnectTo/reddit.png" />
                    <Image Source="../Resources/ConnectTo/netflix.png" />
                    <Image Source="../Resources/ConnectTo/1298766_spotify_music_sound_icon.png" />
                    <Image Source="../Resources/ConnectTo/icons8_telegram_app_240px.png" />


                </StackPanel>
            </ScrollViewer>

        </Grid>
    </Border>
</Page>
