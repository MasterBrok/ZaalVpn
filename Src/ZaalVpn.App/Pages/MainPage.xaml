<Page
    x:Class="ZaalVpn.App.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:customControls="clr-namespace:ZaalVpn.App.CustomControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ZaalVpn.App.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:ZaalVpn.App.ViewModels"
    Loaded="MainPage_OnLoaded"
    mc:Ignorable="d">
    <Border CornerRadius="20">
        <Border.Background>
            <LinearGradientBrush>
                <GradientStop Offset="0.6" Color="#5D7EFC" />
                <GradientStop Offset=".2" Color="#9F4BFB" />
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Grid.Resources>
                <Style x:Key="btnConnect" TargetType="Button">
                    <Setter Property="Width" Value="150" />
                    <Setter Property="Opacity" Value=".6" />
                    <Setter Property="Height" Value="150" />
                    <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="BorderBrush" Value="DimGray" />
                    <Setter Property="Background" Value="White" />
                    <Setter Property="FontFamily" Value="{DynamicResource MainFont}" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <Ellipse
                                        x:Name="el"
                                        Width="150"
                                        Height="150"
                                        Fill="White" />
                                    <Image
                                        Width="40"
                                        Height="40"
                                        Source="../Resources/Icons/icons8_shutdown_208px.png" />
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="Tag" Value="{x:Static viewModels:StateEnum.On}">
                                        <Setter Property="Opacity" Value="1" />
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="el" Property="Stroke" Value="gray" />
                                        <Setter TargetName="el" Property="StrokeThickness" Value="2" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Grid.Resources>

            <!--<customControls:ccButtonIcon
                Margin="15"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                ImageSource="../Resources/Icons/Menu icon.png" />
            <customControls:ccButtonIcon
                Margin="15"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                ImageSource="../Resources/Icons/Menu icon.png" />-->
            <TextBlock
                Margin="0,20"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontFamily="{StaticResource MainFont}"
                FontSize="40"
                Foreground="White">
                <Run Foreground="GhostWhite">Zaal</Run>
                <Run FontSize="30">Vpn</Run>

            </TextBlock>

            <StackPanel
                Margin="23,97,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
                <TextBlock
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontFamily="{StaticResource MainFont}"
                    FontSize="14"
                    Foreground="White"
                    Text="Status" />
                <TextBlock
                    x:Name="tbState"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontFamily="{StaticResource MainFont}"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="No Connected">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="White" />
                            <Style.Triggers>
                                <Trigger Property="Text" Value="Connected">
                                    <Setter Property="Foreground" Value="#30DB5B" />
                                </Trigger>
                                <Trigger Property="Text" Value="Connecting">
                                    <Setter Property="Foreground" Value="Orange" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>


            <StackPanel
                Margin="0,97,23,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top">
                <TextBlock
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    FontFamily="{StaticResource MainFont}"
                    FontSize="14"
                    Foreground="White"
                    Text="Time" />
                <TextBlock
                    x:Name="tbTimer"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontFamily="{StaticResource MainFont}"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="00:00:00" />
            </StackPanel>

            <Path
                VerticalAlignment="Bottom"
                Data="M188 108C247.647 108 296 59.6468 296 0L375 6.55671e-05L375 436C375 448.15 365.15 456 355 456L20 456C9.84974 456 0 448.15 0 436L7.97296e-07 0H80C80 59.6468 128.353 108 188 108Z"
                Fill="GhostWhite"
                Stretch="Uniform" />

            <Button
                x:Name="btnConnect"
                Margin="100,150,100,370"
                Click="BtnConnect_OnClick"
                Style="{StaticResource btnConnect}"
                Tag="{x:Static viewModels:StateEnum.Off}" />

            <Grid Margin="20,150,20,0" VerticalAlignment="Center">
                <!--<TextBlock
                HorizontalAlignment="Left"
                FontFamily="{StaticResource MainFont}"
                FontSize="16"
                Foreground="Gray"
                Text="Location" />-->

                <Border
                    Width="240"
                    Height="140"
                    Margin="0,35,0,-35"
                    HorizontalAlignment="Center">
                    <Grid>
                        <Border CornerRadius="20">
                            <Border.Effect>
                                <BlurEffect
                                    KernelType="Box"
                                    Radius="10"
                                    RenderingBias="Quality" />
                            </Border.Effect>
                            <Border.Background>
                                <LinearGradientBrush>
                                    <GradientStop Offset=".9" Color="#5D7EFC" />
                                    <GradientStop Offset=".1" Color="#9F4BFB" />
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <customControls:ccButtonIcon
                                    x:Name="btnPreviousServer"
                                    Width="20"
                                    Height="20"
                                    MinHeight="30"
                                    Click="PreviusServer_OnClick"
                                    Foreground="{StaticResource white}"
                                    Icon="{StaticResource Right}" />
                                <Image
                                    x:Name="imgCountry"
                                    Width="50"
                                    Height="50"
                                    Stretch="Uniform" />

                                <customControls:ccButtonIcon
                                    x:Name="btnNextServer"
                                    Width="20"
                                    Height="20"
                                    MinHeight="30"
                                    Click="NextServer_OnClick"
                                    Foreground="{StaticResource white}"
                                    Icon="{StaticResource Left}" />
                            </StackPanel>

                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <customControls:ccButtonIcon
                                    x:Name="btnPreviousConfig"
                                    Width="10"
                                    Height="20"
                                    MinWidth="17"
                                    Background="{StaticResource gray}"
                                    Click="PreviousConfig_OnClick"
                                    Foreground="White"
                                    Icon="{StaticResource Right}" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontFamily="{StaticResource MainFont}"
                                    FontSize="19"
                                    FontWeight="Bold"
                                    Foreground="Orange"
                                    Text="#" />
                                <TextBlock
                                    x:Name="tbCongif"
                                    VerticalAlignment="Center"
                                    FontFamily="{StaticResource MainFont}"
                                    FontSize="17"
                                    FontWeight="Regular"
                                    Foreground="White" />



                                <customControls:ccButtonIcon
                                    x:Name="btnNextConfig"
                                    Width="10"
                                    Height="20"
                                    MinWidth="17"
                                    Background="{StaticResource gray}"
                                    Click="NextConfig_OnClick"
                                    Foreground="White"
                                    Icon="{StaticResource Left}" />
                            </StackPanel>
                        </StackPanel>

                    </Grid>
                </Border>

            </Grid>
            <Border
                Width="300"
                Height="140"
                VerticalAlignment="Bottom"
                Background="{StaticResource gray}"
                CornerRadius="20 20 0 0 ">
                <TextBox
                    x:Name="tbErrors"
                    Margin="10"
                    Background="Transparent"
                    BorderThickness="0"
                    FocusVisualStyle="{x:Null}"
                    FontFamily="{StaticResource MainFont}"
                    FontWeight="Regular"
                    Foreground="{StaticResource black2}"
                    HorizontalScrollBarVisibility="Hidden"
                    IsReadOnly="True"
                    ScrollViewer.CanContentScroll="True"
                    SelectionTextBrush="Transparent"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Hidden" />
            </Border>
        </Grid>
    </Border>
</Page>
